{
  "compilerOptions": {
      "target": "es2016",
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": "src",
      "declaration": true,
      "esModuleInterop": true,
      "inlineSourceMap": false,
      "listEmittedFiles": false,
      "listFiles": false,
      "moduleResolution": "node",
      "noImplicitThis": true,
      "noFallthroughCasesInSwitch": true,
      "pretty": true,
      "resolveJsonModule": true,
      "rootDir": "src",
      "skipLibCheck": true,
      "strict": true,
      "traceResolution": false,
      "sourceMap": true,
      "lib": ["ES2023.Array", "dom", "DOM.Iterable", "ESNext"]
  },
  "compileOnSave": false,
  "exclude": ["node_modules", "dist", "**/*.test.ts"],
  "include": ["src/**/*"]
}
